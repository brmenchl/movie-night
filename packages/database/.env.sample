# Connection to Prisma Data Proxy. Used by Prisma Client.
DATABASE_URL="postgresql://{user}:{password}@localhost:{port}/{db}?schema=public"
# Connection to the database. Used for migrations and introspection. These are different for production, but could be the same for local dev
DIRECT_URL="postgresql://{user}:{password}@localhost:{port}/{db}?schema=public"
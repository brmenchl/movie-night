{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "generated/*"
  ],
  "compilerOptions": {
    "paths": {
      "@core/*": [
        "./core/*"
      ],
      "@packages/*": [
        "./packages/*"
      ],
      "@components/*": [
        "./components/*"
      ]
    },
    "noEmit": true
  }
}

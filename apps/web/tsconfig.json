{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "generated/*"
  ],
  "compilerOptions": {
    "paths": {
      "@gql/*": [
        "./gql/*"
      ],
      "@core/*": [
        "./core/*"
      ],
      "@packages/*": [
        "./packages/*"
      ],
      "@components/*": [
        "./components/*"
      ]
    }
  }
}
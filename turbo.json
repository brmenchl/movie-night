{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "pipeline": {
    "build": {
      "dependsOn": [
        "codegen"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "lint": {},
    "dev": {
      "dependsOn": [
        "codegen"
      ],
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "dependsOn": [
        "^db:generate"
      ],
      "outputs": [
        "gql/**"
      ]
    },
    "codegen:watch": {
      "dependsOn": [
        "^db:generate"
      ],
      "outputs": [
        "gql/**"
      ],
      "cache": true,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    }
  }
}